#!/usr/bin/env node

var cp = require('child_process');
var path = require('path');

sassOptions = [
  '-w',
  '--output-style', 'expanded',
  '--include-path', path.resolve(__dirname+'/../style'),
  './style.sass', path.resolve(__dirname+'/../assets/style.css'),
]

var css = cp.spawn(__dirname+'/sass', sassOptions.slice(1), {
  stdio: ['ignore', process.stdout, process.stderr]
});

var css = cp.spawn(__dirname+'/sass', sassOptions, {
  stdio: ['ignore', process.stdout, process.stderr]
});


webpackOptions = [
  '-w'
]



var js = cp.spawn(__dirname+'/webpack', webpackOptions, {
  stdio: ['ignore', process.stdout, process.stderr]
});

// child.unref();
